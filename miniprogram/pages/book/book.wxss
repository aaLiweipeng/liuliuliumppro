/* pages/book/book.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* heade头部总布局 */
.header {
  position: fixed;/* 粘性布局 */
  background-color: #ffffff;/* 白色背景 */
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;/* 要点，避免书籍列表覆盖到header上来 */
}

/* header总布局中的搜索box */
.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;/* 弧度 */
  background-color: #f5f5f5;/* 灰色背景 */
  height: 68rpx;
  width: 700rpx;/* 这里设置宽高的效果比使用padding丝滑 */
  color: #999999;/* 字体颜色 */
}

/* 嵌套样式 指定放大镜图标 */
.box image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}

/* “精选”的标题图 */
.head-img {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

/*图书列表父布局*/
.books-container {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;/* 垂直滑动，水平排列比较适合 */
  flex-wrap: wrap;
  justify-content: space-between;/* 要点 */
  padding: 0 90rpx;/* 要点 */
}

.books-container xy-book{
  margin-bottom: 10rpx;
}
