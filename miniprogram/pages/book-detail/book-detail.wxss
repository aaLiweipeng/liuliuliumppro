/* pages/book-detail/book-detail.wxss */

/* 最外层布局 */
.container {
  background-color: #f5f5f5;
  width: 100%;
}

/* 头部外层框 */
.head {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;/* 加粗 */
}

.author {
  font-size: 28rpx;
  color: #999; /* 灰色 */
  /* margin-bottom: 30rpx; */
}

/* 嵌套样式 head下的image标签 */
.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;/* 图片阴影 */
}
.head title {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;/* 图片阴影 */
}

/* 区块统一父布局 */
.sub-container {
  width: 690rpx; /* 定宽 */
  display: flex;
  flex-direction: column;
  align-items: center;/* 居中 */
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

/* 区块统一标题 */
.headline {
  font-size: 30rpx;
  font-weight: 600;/*加粗*/
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

/* 短评框架 */
.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

/* 嵌套样式，给标签加上间距 */
.comment-container xy-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

/* 内容介绍 内容 */
.content {
  text-indent: 58rpx;/* 段头（p/text标签）缩进 */
  font-weight: 500;
}

/* 短评标签tagView 尾部的数字样式 */
.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

