<!--pages/classic/classic.wxml-->
<view class="classic_container">
  <view class="header">
  <xy-episode 
    class="episode"
    index="{{classicData.index}}"/>
  <xy-like
    class="like"
    bind:like="onLikeClassic"
    like="{{classicData.like_status}}"
    count="{{classicData.fav_nums}}"/>
  </view>

  <xy-movie 
    hidden="{{classicData.type!=100}}"
    img="{{classicData.image}}"
    content="{{classicData.content}}"/>  
    
  <xy-music
    wx:if="{{classicData.type==200}}"
    img="{{classicData.image}}"
    content="{{classicData.content}}"
    title="{{classicData.title}}"
    src="{{classicData.src}}"/>
    
  <xy-essay 
    hidden="{{classicData.type!=300}}"
    img="{{classicData.image}}"
    content="{{classicData.content}}"/>

  <xy-navi 
    bind:naviLeft="onNaviNext"
    bind:naviRight="onNaviPrevious"
    title="{{classicData.title}}"
    first="{{first}}"
    latest="{{latest}}"
    class="navi"/>
</view>